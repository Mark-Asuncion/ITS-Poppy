{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "teacher-poppy",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "app": {
                "all": true
            },
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "all": false,
                "ask": false,
                "confirm": false,
                "message": true,
                "open": true,
                "save": true
            },
            "clipboard": {
                "all": true
            },
            "path": {
                "all": true
            }
        },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.ccss2024.thesis",
      "resources": [
        "bundle/*"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "teacher-poppy",
        "width": 1280,
        "height": 720
      }
    ]
  }
}
